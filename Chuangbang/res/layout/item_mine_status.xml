<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     
        android:orientation="horizontal"
        android:gravity="center">
        
        <ImageView 
            android:id="@+id/iv_mine_status_avater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/ic_launcher"/>
        <!-- 昵称、职位 -->
		
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_mine_status_nico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="昵称" />

            <TextView
                android:id="@+id/tv_mine_status_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="12dp"
                android:text="职务" />
        </LinearLayout>

        <ImageButton 
            android:id="@+id/ib_mine_status_delet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            />
        
        
        
    </LinearLayout>
    
    
    
    <!-- 我的动态文本 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/tv_mine_status_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:textSize="12dp"
            android:text="我的动态文字。。。。。。" />

    </LinearLayout>
    
     <!-- 链接网页 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
    </LinearLayout>
    
     <!-- 点赞、评论 -->
    <LinearLayout 
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_mine_status_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="2012/11/23"
            />
        <RadioButton 
            android:id="@+id/rb_mine_status_zan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_gravity="center"
            />
        
        <ImageButton 
            android:id="@+id/ib_mine_status_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:src="@drawable/status_chat"
            android:layout_gravity="center"
            />
        
        
    </LinearLayout>
    
     <!-- 4条评论列表-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_mine_status_comment_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mine_status_comment_tow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mine_status_comment_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mine_status_comment_forth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

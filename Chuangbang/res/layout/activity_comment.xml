<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chuangbang.activity.CommentActivity" >

    <RelativeLayout
        android:id="@+id/ll_activity_comment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_activity_comment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_activity_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_activity_comment_back"
            android:layout_toLeftOf="@+id/btn_activity_comment_send"
            android:gravity="center"
            android:text="评论内容" />

        <Button
            android:id="@+id/btn_activity_comment_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发送" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_activity_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_activity_comment_top"
        android:lines="6" />

</RelativeLayout>
